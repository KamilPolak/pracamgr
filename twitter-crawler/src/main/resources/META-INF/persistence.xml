<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="mgr">
        <class>pl.edu.agh.twitter.entities.tweet.entity.Tweet</class>
        <class>pl.edu.agh.twitter.entities.user.entity.User</class>
        <class>pl.edu.agh.twitter.entities.competition.entity.Competition</class>
        <class>pl.edu.agh.twitter.entities.manager.entity.Manager</class>
        <class>pl.edu.agh.twitter.entities.matchevent.entity.MatchEvent</class>
        <class>pl.edu.agh.twitter.entities.player.entity.Player</class>
        <class>pl.edu.agh.twitter.entities.team.entity.Team</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost/postgres"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="postgres"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
            <property name="dialect" value="org.hibernate.dialect.PostgreSQL82Dialect" />
            <property name="hibernate.connection.pool_size" value="10" />
            <property name="hibernate.jdbc.batch_size" value="100" />
        </properties>
    </persistence-unit>
</persistence>